{% extends 'base.html.twig' %}

{% block title %}ShoppingList index{% endblock %}

{% block body %}
    <h1>ShoppingList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>NbProducts</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shopping_list in shopping_lists %}
            <tr>
                <td>{{ shopping_list.id }}</td>
                <td>{{ shopping_list.name }}</td>
                <td>{{ shopping_list.nbProducts }}</td>
                <td>
                    <a href="{{ path('app_shopping_list_show', {'id': shopping_list.id}) }}">show</a>
                    <a href="{{ path('app_shopping_list_edit', {'id': shopping_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_shopping_list_new') }}">Create new</a>
    <a href="{{ path('app_logout') }}">Logout</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_admin') }}">Admin</a>
    {% endif %}
{% endblock %}
