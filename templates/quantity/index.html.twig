{% extends 'base.html.twig' %}

{% block title %}Quantity index{% endblock %}

{% block body %}
    <h1>Quantity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Bought</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quantity in quantities %}
            <tr>
                <td>{{ quantity.id }}</td>
                <td>{{ quantity.quantity }}</td>
                <td>{{ quantity.bought ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_quantity_show', {'id': quantity.id}) }}">show</a>
                    <a href="{{ path('app_quantity_edit', {'id': quantity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_quantity_new') }}">Create new</a>
{% endblock %}
