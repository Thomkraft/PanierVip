{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table table-striped table-hover">
    <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ product.weight ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Euros</th>
                <td>{{ product.euros }}</td>
            </tr>
            <tr>
                <th>Centimes</th>
                <td>{{ product.centimes }}</td>
            </tr>

            <tr>
                <th>Category</th>
                <td>{{ product.category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_index') }}" class="btn btn-secondary">back to list</a>
{% endblock %}
