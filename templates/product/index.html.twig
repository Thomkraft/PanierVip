{% extends 'base.html.twig' %}

{% block title %}Product Manager{% endblock %}

{% block body %}
    <h1>Product Manager</h1>

    <table class="table table-striped table-hover">
    <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Weight</th>
                <th>Euros</th>
                <th>Centimes</th>
                <th>Category</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.weight }}</td>
                <td>{{ product.euros }}</td>
                <td>{{ product.centimes }}</td>
                <td>{{ product.category.name }}</td>
                <td>
                    <a href="{{ path('app_admin_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}">edit</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_new') }}" class="btn btn-primary">Create new</a>
    <a href="{{ path('app_admin') }}" class="btn btn-secondary">back</a>
{% endblock %}
